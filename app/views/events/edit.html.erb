<div class=announce><strong id="notice"><%= notice %></strong></div>
<div class= show_all>
<%= form_with model: @event, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル " %><br />
    <%= f.text_field :title, id:"title",placeholder:"入力必須" %>
  </div>

 <div class="field">
    <%= f.label :start_time, "日付" %><br />
    <%= f.datetime_select :start_time, class: :form__text, id:"start_time" %>
  </div>  


  <div class="field">
    <%= f.label :content, "日誌内容" %><br />
    <%= f.text_area :content, class: :form__text, id:"content" %>
  </div>  

  <div class="field">
    <%= f.label :worktime, "労働時間 " %><br />
    <%= f.text_area :worktime, class: :form__text, id:"worktime" ,placeholder:"半角数字のみ"%>
  </div>



  <div class="actions">
    <%= f.submit "保存する",class: :form__btn  %>
    <br>
    <br>
    <%= link_to 'Back', root_path %>
  </div>
<% end %>
</div>